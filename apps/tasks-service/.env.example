# Ambiente
NODE_ENV=development

# Porta do Tasks Service
PORT=5000

# JWT Configuration
# ⚠️ IMPORTANTE: Mude este secret em produção! Use um valor aleatório e seguro.
# Exemplo de geração: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# PostgreSQL Database
# Para desenvolvimento local: localhost
# Para Docker: db (nome do container)
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASS=password
DB_NAME=challenge_db

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672

# Auth Service URL (para buscar informações de usuários)
# Para desenvolvimento local: http://localhost:4000
# Para Docker: http://auth-service:4000 (configurado no docker-compose.yml)
AUTH_SERVICE_URL=http://localhost:4000
