# Ambiente
NODE_ENV=development

# Porta do API Gateway
PORT=3001

# JWT Secret (deve ser a mesma em todos os serviços)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# URLs dos Serviços (usar o nome do container quando rodar com Docker)
# Para desenvolvimento local: http://localhost:{PORT}
# Para Docker: http://{service-name}:{PORT}
AUTH_SERVICE_URL=http://auth-service:4000
TASKS_SERVICE_URL=http://tasks-service:5000
NOTIFICATIONS_SERVICE_URL=http://notifications-service:6000

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10
