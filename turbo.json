{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": ["NODE_ENV"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "start:dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "clean": {
      "cache": false
    },
        "migration:generate": {
      "cache": false
    },
    "migration:run": {
      "cache": false
    },
    "migration:revert": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "JWT_SECRET",
    "DB_HOST",
    "DB_PORT",
    "DB_USER",
    "DB_PASS",
    "DB_NAME",
    "RABBITMQ_URL",
    "AUTH_SERVICE_URL",
    "TASKS_SERVICE_URL"
  ],
  "globalDependencies": [
    "tsconfig.json",
    "package.json"
  ]
}